{
  "name": "connect-four",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "tsc -w -p backend/tsconfig.json & nodemon -w server --experimental-specifier-resolution=node server/backend/index.js",
    "start": "export NODE_ENV=production && node --experimental-specifier-resolution=node server/backend/index.js",
    "build": "vite build && tsc -p backend/tsconfig.json"
  },
  "prettier": {
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "printWidth": 80,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "dependencies": {
    "canvas-confetti": "^1.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.6.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.7.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "sass": "^1.56.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vite-plugin-node": "^1.0.0",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.0.9"
  }
}
